{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "../", // Set to include the shared directory
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".", // Useful for absolute imports
    "paths": {
      "*": ["./*"],
      "shared/*": ["../shared/*"]
    }
  },
  "include": ["src", "../shared/**/*", "../src/utils/endpoints"],
  "exclude": ["node_modules", "dist"]
}
